set nocompatible

set shiftwidth=3
set tabstop=3
set expandtab
set smartindent

set mouse=a

set showcmd
set number
set ruler
set spell

set autoread
set autochdir

syntax on

map th :tabfirst<CR>
map tk :tabnext<CR>
map tj :tabprev<CR>
map tl :tablast<CR>

set ignorecase
set smartcase
set incsearch

colorscheme zenburnmod

set encoding=utf-8
set fileencodings=utf-8
